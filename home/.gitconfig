[user]
	name = Milan Nagy
	email = 123.wizek@gmail.com
[merge]
	ff = false
[core]
	excludesfile = /Users/milan/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[color]
	ui = auto

[credential]
        helper = cache --timeout=3600

[color]
        ui = true
  branch = auto
  diff = auto
  status = auto
  interactive = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "interactive"]
  prompt = cyan

[alias]
  dt = difftool --dir-diff
  co = checkout
  ci = commit
  st = status
  br = branch
  dt = difftool
  da = diffall
  conflicts = !git --no-pager diff --name-only --diff-filter=U
  hist = log \
    --author-date-order \
    --pretty=format:'%C(black)%h %C(cyan)%ad%Creset %s%Cgreen%d %C(yellow)[%an]' \
    --graph \
    --date=short \
    -F
  hst = !git --no-pager log \
    --author-date-order \
    --pretty=format:'%C(black)%h %C(cyan)%ad%Creset %s%Cgreen%d %C(yellow)[%an]' \
    --graph \
    --date=short \
    -3
  type = cat-file -type
  dump = cat-file -p

[core]
        editor = subl -n -w
[giggle]
        main-window-maximized = true
        main-window-geometry = 700x550+114+24
        history-view-vpane-position = 238
        file-view-vpane-position = 1095
        main-window-view = FileView
        show-graph = true
[push]
        default = simple
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[pull]
	rebase = preserve
[branch]
	autosetuprebase = always
